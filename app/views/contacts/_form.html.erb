<table summary="Client form field">
	<tr>
		<td>Contact Name</td>
		<td><%= f.text_field(:contactName) %></td>
	</tr>

	<tr>
		<td>Contact email</td>
		<td><%= f.text_field(:contactEmail) %></td>
	</tr>

	<tr>
		<td>Contact phone</td>
		<td><%= f.text_field(:contactPhone) %></td>
	</tr>

	<tr>
		<td>Contact position</td>
		<td><%= f.text_field(:contactPosition) %></td>
	</tr>
	<tr>
		<td colspan="2">Leave the following blank if you do not wish to recieve relevant emails</td>
	</tr>
	<tr>
		<td>Client Site</td>
		<td><%= select_tag 'clientSite_id', options_for_select(ClientSite.where(['ClientSites.client_id = ?', session[:id]]).collect{ |c| [c.clientSiteName, c.id] }), {:include_blank => true} %></td>
	</tr>
	<tr>
		<td>Client</td>
		<td><%= select_tag 'client_id', options_for_select(Client.where(['Clients.id = ?', session[:id]]).collect{ |c| [c.clientName, c.id] }), {:include_blank => true} %></td>
	</tr>
	<%= f.hidden_field(:client_id) %> 
	<%= f.hidden_field(:clientSite_id) %> 

	<script type="text/javascript" src='/js/setSelected.js'></script>
	<script type="text/javascript">
		setSelected('client_id', 'contact_client_id');
		setSelected('clientSite_id', 'contact_clientSite_id');
	</script>
</table>