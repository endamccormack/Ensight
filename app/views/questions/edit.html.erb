<div class="QuestionUpdate">
	<link rel="stylesheet" type="text/css" href="/css/form.css" /> 
	<%= link_to('< Back', {:action => 'list'}, :class => 'formBackLink') %><br/>

	<div class="module">
	<div class="moduleHeader">Update Question</div>
	<p class="errors"><%= @question.errors.full_messages.join(', ') %></p>
	<%= form_for(:question, :url => {:action => 'update', :id => @question.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>


		<%= submit_tag("Update Question", :class => "formButton ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only ui-state-hover") %>

	<% end %>
	</div>

</div>