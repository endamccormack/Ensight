<link rel="stylesheet" type="text/css" href="/css/ControlPanelItem.css"/>
<link rel="stylesheet" type="text/css" href="/css/table.css" /> 

<div id="clientSitesMenu" class="menuPane" >
	<%= render(:partial => "control_panel/menu") %>
</div>
<div id="infoPane">
	<%= link_to("Add a new client site", {:action => 'new'}, :class => 'ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only ui-state-hover', :id => 'addItem') %>
	<table>
		<tr>
			<th>Client Site Name</th>
			<th>Client Site Address</th>
			<th>View Client Site details</th>
			<th>Edit Client Site details</th>
			<th>Delete Client Site</th>
		</tr>
	<%if @clientSites != nil %>
		<% @clientSites.each do |clientSite| %>
			<tr> 
				<td><%= clientSite.clientSiteName %> </td>
				<td><%= clientSite.clientSiteAddress %> </td>
				<td><%= link_to("Show", {:action => 'show', :id => clientSite.id}, :class => 'action show') %> </td>
				<td><%= link_to("Edit", {:action => 'edit', :id => clientSite.id}, :class => 'action edit')  %> </td>
				<td><%= link_to("Delete", {:action => 'delete', :id => clientSite.id}, :class => 'action delete') %></td>
			</tr> 
		<%end%>
	<%end%>
	</table>
</div>
